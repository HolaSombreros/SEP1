<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="600.0" userData="Viewing All Tasks Within A Requirement" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TaskListController">
    <Label style="-fx-font-weight: bold;" text="Tasks">
        <font>
          <Font size="24.0" />
        </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </Label>
    <HBox alignment="CENTER" prefWidth="200.0" spacing="41.0">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <Label style="-fx-font-weight: bold;" text="Project title" />
        <TextField fx:id="projectTitle" editable="false" prefWidth="350.0" promptText="Project title" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="200.0" spacing="8.0">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
        <Label style="-fx-font-weight: bold;" text="Requirement title" />
        <TextField fx:id="requirementTitle" editable="false" prefWidth="350.0" promptText="Requirement title" />
    </HBox>
   <HBox alignment="CENTER" maxWidth="460.0" spacing="50.0">
      <children>
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <Label text="Search by Id:" />
                <TextField fx:id="searchBar" maxWidth="40.0" promptText="Id" />
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <Button mnemonicParsing="false" onAction="#search" style="-fx-font-weight: bold;" text="Search">
                  <padding>
                     <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                  </padding>
               </Button>
               <Button mnemonicParsing="false" onAction="#clear" style="-fx-font-weight: bold;" text="Clear">
                  <padding>
                     <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                  </padding>
               </Button>
            </children>
         </HBox>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </HBox>
    <TableView fx:id="taskTable" maxHeight="200.0" maxWidth="460.0">
      <columns>
          <TableColumn fx:id="idColumn" prefWidth="32.0" text="Id" />
          <TableColumn fx:id="titleColumn" prefWidth="229.0" text="Title" />
          <TableColumn fx:id="deadlineColumn" minWidth="0.0" prefWidth="100.0" text="Deadline" />
          <TableColumn fx:id="statusColumn" minWidth="0.0" prefWidth="100.0" text="Status" />
      </columns>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </TableView>
   <Label fx:id="errorLabel" style="-fx-font-weight: bold;" text="ErrorLabel" textFill="RED">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Label>
    <HBox alignment="CENTER" maxWidth="460.0" spacing="33.0">
        <Button mnemonicParsing="false" onAction="#addNewTask" style="-fx-font-weight: bold;" text="Add New Task">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
        </Button>
        <Button mnemonicParsing="false" onAction="#viewTask" style="-fx-font-weight: bold;" text="View Task">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
        </Button>
        <Button mnemonicParsing="false" onAction="#removeTask" style="-fx-font-weight: bold;" text="Remove Task">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
        </Button>
        <Button mnemonicParsing="false" onAction="#goBack" style="-fx-font-weight: bold;" text="Back">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
        </Button>
    </HBox>
</VBox>
