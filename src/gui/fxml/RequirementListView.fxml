<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="430.0"
      prefWidth="688.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.RequirementListController">
    <children>
        <Label text="Requirements">
            <font>
                <Font name="System Bold" size="26.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <HBox alignment="TOP_CENTER" prefHeight="21.0" prefWidth="600.0">
            <children>
                <TextField fx:id="searchInput" prefHeight="27.0"
                           prefWidth="520.0">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </TextField>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="210.0" prefWidth="688.0">
            <children>
                <ScrollPane prefHeight="212.0" prefWidth="522.0">
                    <content>
                        <TableView fx:id="requirementListTable"
                                   prefHeight="200.0" prefWidth="522.0">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="90.0"
                                             text="ID"/>
                                <TableColumn fx:id="statusColumn"
                                             prefWidth="227.0" text="Status"/>
                                <TableColumn fx:id="deadlineColumn"
                                             prefWidth="204.0" text="Deadline"/>
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="45.0" prefWidth="688.0">
            <children>
                <Label text="User Story: ">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
                <TextArea fx:id="userStoryShow" prefHeight="63.0"
                          prefWidth="435.0"/>
            </children>
        </HBox>
        <Label fx:id="errorLabel" text="ERROR" textFill="#d30c0c">
            <font>
                <Font size="17.0"/>
            </font>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" prefHeight="53.0" prefWidth="688.0">
            <children>
                <Button mnemonicParsing="false"
                        onAction="#addNewRequirementButtonPressed"
                        text="Add New Requirement">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false"
                        onAction="#viewRequirementButtonPressed"
                        text="View Requirement">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false"
                        onAction="#removeRequirementButtonPressed"
                        text="Remove Requriement">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#backButtonPressed"
                        text="Back">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
