<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" userData="Add a new Task" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.AddTaskController">
   <Label style="-fx-font-weight: bold;" text="Add a new Task">
      <font>
         <Font size="24.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="30.0"/>
      </VBox.margin>
   </Label>
   <TextField maxWidth="460.0" promptText="Title">
      <VBox.margin>
         <Insets bottom="10.0"/>
      </VBox.margin>
   </TextField>
   <HBox alignment="CENTER_LEFT" maxWidth="460.0" prefHeight="25.0">
      <VBox.margin>
         <Insets bottom="10.0"/>
      </VBox.margin>
      <DatePicker minWidth="180.0" promptText="Starting date"/>
   </HBox>
   <HBox alignment="CENTER_LEFT" maxWidth="460.0" prefHeight="25.0">
      <VBox.margin>
         <Insets bottom="10.0"/>
      </VBox.margin>
      <DatePicker minWidth="180.0" promptText="Deadline">
         <HBox.margin>
            <Insets right="100.0"/>
         </HBox.margin>
      </DatePicker>
      <Label text="Estimated time (hours)">
         <HBox.margin>
            <Insets right="10.0"/>
         </HBox.margin>
      </Label>
      <TextField maxWidth="50.0">
         <HBox.margin>
            <Insets/>
         </HBox.margin>
      </TextField>
   </HBox>
   <Label style="-fx-font-weight: bold;" text="ErrorLabel" textFill="RED"/>
   <HBox alignment="CENTER" maxWidth="460.0" spacing="30.0">
      <VBox.margin>
         <Insets top="20.0"/>
      </VBox.margin>
      <Button mnemonicParsing="false" style="-fx-font-weight: bold;" text="Add Task">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#cancel" style="-fx-font-weight: bold;" text="Cancel">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
   </HBox>
</VBox>
