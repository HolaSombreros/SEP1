<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" userData="Viewing Task Details" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.DetailsAndEditTaskController">
   <Label style="-fx-font-weight: bold;" text="Task Details">
      <font>
         <Font size="24.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="20.0"/>
      </VBox.margin>
   </Label>
   <TextField maxWidth="460.0" promptText="Title" fx:id="titleInput">
      <VBox.margin>
         <Insets bottom="10.0"/>
      </VBox.margin>
   </TextField>
   <HBox alignment="CENTER" maxWidth="460.0" prefHeight="200.0" spacing="80.0">
      <VBox.margin>
         <Insets bottom="10.0"/>
      </VBox.margin>
      <VBox alignment="CENTER_RIGHT" maxWidth="180.0" spacing="10.0">
         <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="280.0" spacing="10.0">
            <VBox.margin>
               <Insets/>
            </VBox.margin>
            <Label text="Estimated time (hours)"/>
            <TextField maxWidth="50.0" fx:id="estimatedHoursInput"/>
         </HBox>
         <DatePicker minWidth="180.0" promptText="Starting date" editable="false" fx:id="startingDateInput"/>
         <DatePicker minWidth="180.0" promptText="Deadline" editable="false" fx:id="deadlineInput"/>
         <ChoiceBox fx:id="statusInput" prefWidth="180.0"/>
         <TextField fx:id="responsibleTeamMemberInput" maxWidth="180.0" promptText="Responsible Team Member"/>
         <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="280.0" spacing="10.0">
            <Label text="Hours worked on"/>
            <TextField maxWidth="50.0" fx:id="hoursWorkedInput"/>
         </HBox>
      </VBox>
      <VBox alignment="CENTER_LEFT" maxWidth="200.0" spacing="10.0">
         <TableView prefHeight="200.0" prefWidth="200.0" fx:id="teamTable">
            <columns>
               <TableColumn prefWidth="36.0" text="Id" fx:id="idColumn"/>
               <TableColumn prefWidth="163.0" text="Name" fx:id="nameColumn"/>
            </columns>
         </TableView>
      </VBox>
   </HBox>
   <Label fx:id="errorLabel" style="-fx-font-weight: bold;" text="ErrorLabel" textFill="RED">
      <VBox.margin>
         <Insets bottom="20.0"/>
      </VBox.margin>
   </Label>
   <HBox alignment="TOP_CENTER" maxWidth="460.0" spacing="20.0">
      <Button mnemonicParsing="false" onAction="#editDetails" style="-fx-font-weight: bold;" text="Edit Details">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
      <Button mnemonicParsing="false" style="-fx-font-weight: bold;" text="Make Responsible" onAction="#makeResponsible">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
      <Button mnemonicParsing="false" style="-fx-font-weight: bold;" text="Remove Task" onAction="#removeTask">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#goBack" style="-fx-font-weight: bold;" text="Back">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
         </padding>
      </Button>
   </HBox>
</VBox>
